@model MotorsHut.Models.Admin.CarsListViewModel
@{
    ViewData["Title"] = "Cars";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --amber:      #f59e0b;
        --amber-deep: #d97706;
        --amber-glow: rgba(245,158,11,0.1);
        --bg:         #06090f;
        --surface:    #0d1220;
        --surface2:   #111827;
        --border:     rgba(255,255,255,0.065);
        --text:       #e2e8f0;
        --muted:      #64748b;
        --muted2:     #94a3b8;
        --green:      #10b981;
        --red:        #f87171;
        --blue:       #60a5fa;
    }

    /* ?? Page header ?????????????????????????????? */
    .cl-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1.6rem;
    }

    .cl-header__title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 2rem;
        letter-spacing: 0.04em;
        color: var(--text);
        line-height: 1;
        margin: 0 0 0.25rem;
    }

    .cl-header__sub {
        font-size: 0.82rem;
        color: var(--muted);
    }

    /* ?? Add button ??????????????????????????????? */
    .cl-btn-add {
        display: inline-flex;
        align-items: center;
        gap: 0.45rem;
        font-size: 0.85rem;
        font-weight: 700;
        letter-spacing: 0.03em;
        padding: 0.55rem 1.1rem;
        border-radius: 9px;
        text-decoration: none;
        background: linear-gradient(135deg, var(--amber-deep), var(--amber));
        color: #0f1623;
        border: none;
        box-shadow: 0 4px 14px rgba(245,158,11,0.28);
        transition: filter 0.18s, transform 0.15s;
        white-space: nowrap;
        align-self: flex-start;
    }

    .cl-btn-add:hover {
        filter: brightness(1.08);
        transform: translateY(-1px);
        color: #0f1623;
    }

    /* ?? Search bar ??????????????????????????????? */
    .cl-search-wrap {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 14px;
        padding: 1rem 1.2rem;
        margin-bottom: 1.2rem;
        display: flex;
        align-items: center;
        gap: 0.7rem;
        flex-wrap: wrap;
    }

    .cl-search-input-wrap {
        position: relative;
        flex: 1;
        min-width: 220px;
    }

    .cl-search-icon {
        position: absolute;
        left: 0.85rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--muted);
        pointer-events: none;
    }

    .cl-search-input {
        width: 100%;
        background: rgba(255,255,255,0.04);
        border: 1px solid var(--border);
        border-radius: 9px;
        padding: 0.6rem 1rem 0.6rem 2.5rem;
        color: var(--text);
        font-family: 'DM Sans', sans-serif;
        font-size: 0.88rem;
        outline: none;
        transition: border-color 0.18s, background 0.18s, box-shadow 0.18s;
    }

    .cl-search-input::placeholder { color: #334155; }

    .cl-search-input:focus {
        border-color: rgba(245,158,11,0.4);
        background: rgba(245,158,11,0.04);
        box-shadow: 0 0 0 3px rgba(245,158,11,0.07);
    }

    .cl-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.83rem;
        font-weight: 600;
        padding: 0.58rem 1rem;
        border-radius: 9px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,0.04);
        color: var(--muted2);
        text-decoration: none;
        cursor: pointer;
        font-family: 'DM Sans', sans-serif;
        transition: color 0.18s, background 0.18s, border-color 0.18s;
        white-space: nowrap;
    }

    .cl-btn:hover {
        color: var(--text);
        background: rgba(255,255,255,0.07);
        border-color: rgba(255,255,255,0.12);
    }

    .cl-btn--search {
        background: var(--amber-glow);
        border-color: rgba(245,158,11,0.25);
        color: var(--amber);
    }

    .cl-btn--search:hover {
        background: rgba(245,158,11,0.18);
        color: var(--amber);
        border-color: rgba(245,158,11,0.4);
    }

    /* ?? Table panel ?????????????????????????????? */
    .cl-panel {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 16px;
        overflow: hidden;
    }

    .cl-panel__head {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.1rem 1.4rem;
        border-bottom: 1px solid var(--border);
        gap: 1rem;
        flex-wrap: wrap;
    }

    .cl-panel__title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.15rem;
        letter-spacing: 0.06em;
        color: var(--text);
        margin: 0;
    }

    .cl-count-badge {
        font-size: 0.72rem;
        font-weight: 700;
        padding: 0.22rem 0.65rem;
        border-radius: 999px;
        background: var(--amber-glow);
        border: 1px solid rgba(245,158,11,0.2);
        color: var(--amber);
        letter-spacing: 0.05em;
    }

    /* ?? Empty state ?????????????????????????????? */
    .cl-empty {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 4rem 2rem;
        gap: 0.75rem;
        color: var(--muted);
    }

    .cl-empty__icon {
        width: 52px;
        height: 52px;
        background: rgba(255,255,255,0.04);
        border: 1px solid var(--border);
        border-radius: 14px;
        display: grid;
        place-items: center;
        color: var(--muted);
        margin-bottom: 0.25rem;
    }

    .cl-empty p { font-size: 0.9rem; margin: 0; }

    /* ?? Table ???????????????????????????????????? */
    .cl-table-wrap { overflow-x: auto; }

    .cl-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.875rem;
    }

    .cl-table thead tr {
        border-bottom: 1px solid var(--border);
    }

    .cl-table thead th {
        padding: 0.75rem 1.1rem;
        font-size: 0.7rem;
        font-weight: 700;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: var(--muted);
        text-align: left;
        white-space: nowrap;
        background: rgba(255,255,255,0.018);
    }

    .cl-table thead th:last-child { text-align: right; }

    .cl-table tbody tr {
        border-bottom: 1px solid var(--border);
        transition: background 0.15s;
    }

    .cl-table tbody tr:last-child { border-bottom: none; }

    .cl-table tbody tr:hover { background: rgba(255,255,255,0.025); }

    .cl-table td {
        padding: 0.9rem 1.1rem;
        color: var(--text);
        vertical-align: middle;
    }

    .cl-table td:last-child { text-align: right; }

    /* Car name cell */
    .cl-car-name {
        font-weight: 600;
        color: var(--text);
        font-size: 0.9rem;
    }

    .cl-car-variant {
        font-size: 0.76rem;
        color: var(--muted);
        margin-top: 2px;
    }

    /* Year */
    .cl-year {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.05rem;
        letter-spacing: 0.06em;
        color: var(--muted2);
    }

    /* Price */
    .cl-price {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.1rem;
        letter-spacing: 0.04em;
        color: var(--text);
    }

    /* Mileage */
    .cl-mileage {
        font-size: 0.84rem;
        color: var(--muted2);
    }

    /* Status badges */
    .cl-badges { display: flex; align-items: center; gap: 0.35rem; flex-wrap: wrap; }

    .cl-badge {
        font-size: 0.7rem;
        font-weight: 700;
        letter-spacing: 0.06em;
        text-transform: uppercase;
        padding: 0.2rem 0.55rem;
        border-radius: 6px;
    }

    .cl-badge--sold     { background: rgba(16,185,129,0.12);  color: var(--green); border: 1px solid rgba(16,185,129,0.2); }
    .cl-badge--stock    { background: rgba(96,165,250,0.12);  color: var(--blue);  border: 1px solid rgba(96,165,250,0.2); }
    .cl-badge--returned { background: rgba(245,158,11,0.12);  color: var(--amber); border: 1px solid rgba(245,158,11,0.2); }

    /* Edit button */
    .cl-btn-edit {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        font-size: 0.78rem;
        font-weight: 600;
        padding: 0.38rem 0.8rem;
        border-radius: 7px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,0.03);
        color: var(--muted2);
        text-decoration: none;
        transition: color 0.18s, background 0.18s, border-color 0.18s;
        white-space: nowrap;
    }

    .cl-btn-edit:hover {
        color: var(--text);
        background: rgba(255,255,255,0.07);
        border-color: rgba(255,255,255,0.14);
    }

    /* Search highlight indicator */
    .cl-search-tag {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.76rem;
        color: var(--amber);
        background: var(--amber-glow);
        border: 1px solid rgba(245,158,11,0.2);
        border-radius: 999px;
        padding: 0.2rem 0.65rem;
    }

    .cl-search-tag a {
        color: var(--muted);
        text-decoration: none;
        font-weight: 700;
        transition: color 0.15s;
    }

    .cl-search-tag a:hover { color: var(--red); }
</style>

<!-- Page header -->
<div class="cl-header">
    <div>
        <h1 class="cl-header__title">Cars</h1>
        <div class="cl-header__sub">Manage your full inventory — search, edit, and track all listings</div>
    </div>
    <a asp-controller="Admin" asp-action="AddCar" class="cl-btn-add">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
        Add New Car
    </a>
</div>

<!-- Search bar -->
<form method="get" asp-controller="Admin" asp-action="Cars" class="cl-search-wrap">
    <div class="cl-search-input-wrap">
        <svg class="cl-search-icon" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
        <input type="text"
               class="cl-search-input"
               name="search"
               value="@Model.Search"
               placeholder="Search by make, model, variant, colour, VIN…"
               autocomplete="off" />
    </div>
    <button type="submit" class="cl-btn cl-btn--search">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
        Search
    </button>
    @if (!string.IsNullOrWhiteSpace(Model.Search))
    {
        <a asp-controller="Admin" asp-action="Cars" class="cl-btn">
            <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
            Clear
        </a>
    }
</form>

<!-- Table panel -->
<div class="cl-panel">
    <div class="cl-panel__head">
        <div style="display:flex;align-items:center;gap:0.7rem;flex-wrap:wrap;">
            <h3 class="cl-panel__title">Cars List</h3>
            @if (!string.IsNullOrWhiteSpace(Model.Search))
            {
                <span class="cl-search-tag">
                    Searching: "@Model.Search"
                    <a asp-controller="Admin" asp-action="Cars" title="Clear search">?</a>
                </span>
            }
        </div>
        <span class="cl-count-badge">@Model.Cars.Count result@(Model.Cars.Count == 1 ? "" : "s")</span>
    </div>

    @if (Model.Cars.Count == 0)
    {
        <div class="cl-empty">
            <div class="cl-empty__icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 14.5V16a1 1 0 0 0 1 1h1a2 2 0 1 0 4 0h4a2 2 0 1 0 4 0h1a1 1 0 0 0 1-1v-1.5l-1.2-4.1A2 2 0 0 0 16.9 9H7.1a2 2 0 0 0-1.9 1.4L4 14.5Z"/>
                    <path d="M7.5 9 9 6.8A1.5 1.5 0 0 1 10.2 6h3.6A1.5 1.5 0 0 1 15 6.8L16.5 9"/>
                </svg>
            </div>
            <p>No cars found@(!string.IsNullOrWhiteSpace(Model.Search) ? $" matching \"{Model.Search}\"" : "").</p>
            @if (!string.IsNullOrWhiteSpace(Model.Search))
            {
                <a asp-controller="Admin" asp-action="Cars" class="cl-btn" style="margin-top:0.25rem">Clear search</a>
            }
        </div>
    }
    else
    {
        <div class="cl-table-wrap">
            <table class="cl-table">
                <thead>
                    <tr>
                        <th>Car</th>
                        <th>Year</th>
                        <th>Price</th>
                        <th>Mileage</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in Model.Cars)
                    {
                        <tr>
                            <td>
                                <div class="cl-car-name">@car.Make @car.Model</div>
                                @if (!string.IsNullOrWhiteSpace(car.Variant))
                                {
                                    <div class="cl-car-variant">@car.Variant</div>
                                }
                            </td>
                            <td><span class="cl-year">@car.Year</span></td>
                            <td><span class="cl-price">$@car.Price.ToString("N2")</span></td>
                            <td><span class="cl-mileage">@car.MileageKm.ToString("N0") km</span></td>
                            <td>
                                <div class="cl-badges">
                                    @if (car.IsSold)
                                    {
                                        <span class="cl-badge cl-badge--sold">Sold</span>
                                    }
                                    else
                                    {
                                        <span class="cl-badge cl-badge--stock">In Stock</span>
                                    }
                                    @if (car.IsReturned)
                                    {
                                        <span class="cl-badge cl-badge--returned">Returned</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <a asp-controller="Admin"
                                   asp-action="EditCar"
                                   asp-route-id="@car.Id"
                                   class="cl-btn-edit">
                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                                    Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
