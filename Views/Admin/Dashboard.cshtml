@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --amber:      #f59e0b;
        --amber-deep: #d97706;
        --amber-glow: rgba(245,158,11,0.1);
        --bg:         #06090f;
        --surface:    #0d1220;
        --surface2:   #111827;
        --border:     rgba(255,255,255,0.065);
        --text:       #e2e8f0;
        --muted:      #64748b;
        --muted2:     #94a3b8;
        --green:      #10b981;
        --red:        #f87171;
    }

    .db-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1.8rem;
    }

    .db-header__title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 2rem;
        letter-spacing: 0.04em;
        color: var(--text);
        line-height: 1;
        margin: 0 0 0.3rem;
    }

    .db-header__sub {
        font-size: 0.83rem;
        color: var(--muted);
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .db-header__sub .live-dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: var(--green);
        box-shadow: 0 0 0 4px rgba(16,185,129,0.18);
        animation: livePulse 2s ease infinite;
    }

    @@keyframes livePulse {
        0%,100% { box-shadow: 0 0 0 4px rgba(16,185,129,0.18); }
        50%      { box-shadow: 0 0 0 8px rgba(16,185,129,0.05); }
    }

    .db-header__date {
        font-size: 0.78rem;
        color: var(--muted);
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 0.4rem 0.85rem;
        white-space: nowrap;
        align-self: flex-start;
    }

    /* Stat cards */
    .db-stats {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .db-stat {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 1.2rem 1.3rem;
        position: relative;
        overflow: hidden;
        transition: border-color 0.2s, transform 0.2s;
    }

    .db-stat:hover {
        border-color: rgba(245,158,11,0.22);
        transform: translateY(-2px);
    }

    .db-stat::before {
        content: '';
        position: absolute;
        top: -30px; right: -30px;
        width: 90px; height: 90px;
        border-radius: 50%;
        background: radial-gradient(circle, var(--stat-color, rgba(245,158,11,0.14)), transparent 70%);
        pointer-events: none;
    }

    .db-stat--amber { --stat-color: rgba(245,158,11,0.16); }
    .db-stat--green { --stat-color: rgba(16,185,129,0.14); }
    .db-stat--blue  { --stat-color: rgba(59,130,246,0.14); }
    .db-stat--red   { --stat-color: rgba(248,113,113,0.14); }

    .db-stat__top {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 0.9rem;
    }

    .db-stat__label {
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.09em;
        text-transform: uppercase;
        color: var(--muted);
    }

    .db-stat__icon {
        width: 34px; height: 34px;
        border-radius: 9px;
        display: grid;
        place-items: center;
        flex-shrink: 0;
    }

    .db-stat--amber .db-stat__icon { background: rgba(245,158,11,0.12); color: var(--amber); }
    .db-stat--green .db-stat__icon { background: rgba(16,185,129,0.12); color: var(--green); }
    .db-stat--blue  .db-stat__icon { background: rgba(59,130,246,0.12); color: #60a5fa; }
    .db-stat--red   .db-stat__icon { background: rgba(248,113,113,0.12); color: var(--red); }

    .db-stat__value {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 2.4rem;
        letter-spacing: 0.04em;
        color: var(--text);
        line-height: 1;
        margin-bottom: 0.4rem;
    }

    .db-stat__foot {
        font-size: 0.78rem;
        color: var(--muted);
        display: flex;
        align-items: center;
        gap: 0.35rem;
        flex-wrap: wrap;
    }

    .db-stat__trend {
        font-size: 0.74rem;
        font-weight: 700;
        padding: 0.12rem 0.42rem;
        border-radius: 5px;
    }

    .db-stat__trend--up   { background: rgba(16,185,129,0.12); color: var(--green); }
    .db-stat__trend--down { background: rgba(248,113,113,0.12); color: var(--red); }

    /* Middle */
    .db-mid {
        display: grid;
        grid-template-columns: 1.4fr 1fr;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .db-panel {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 1.3rem 1.4rem;
    }

    .db-panel__head {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1.2rem;
    }

    .db-panel__title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.1rem;
        letter-spacing: 0.06em;
        color: var(--text);
        margin: 0;
    }

    .db-panel__badge {
        font-size: 0.72rem;
        font-weight: 700;
        padding: 0.22rem 0.6rem;
        border-radius: 999px;
        background: var(--amber-glow);
        border: 1px solid rgba(245,158,11,0.2);
        color: var(--amber);
        letter-spacing: 0.05em;
    }

    /* Bar chart */
    .db-chart { display: flex; flex-direction: column; gap: 0.9rem; }

    .db-bars {
        display: flex;
        align-items: flex-end;
        gap: 0.5rem;
        height: 130px;
    }

    .db-bar-col {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.4rem;
        height: 100%;
        justify-content: flex-end;
    }

    .db-bar {
        width: 100%;
        border-radius: 6px 6px 0 0;
        background: linear-gradient(180deg, var(--amber) 0%, var(--amber-deep) 100%);
        position: relative;
        transition: filter 0.2s;
        min-height: 4px;
        cursor: pointer;
    }

    .db-bar:hover { filter: brightness(1.2); }

    .db-bar::after {
        content: attr(data-val);
        position: absolute;
        top: -22px; left: 50%;
        transform: translateX(-50%);
        font-size: 0.65rem;
        font-weight: 700;
        color: var(--muted2);
        white-space: nowrap;
        opacity: 0;
        transition: opacity 0.2s;
        background: var(--surface2);
        padding: 2px 5px;
        border-radius: 4px;
    }

    .db-bar:hover::after { opacity: 1; }

    .db-bar-day {
        font-size: 0.68rem;
        color: var(--muted);
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .db-chart__meta {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 0.7rem;
        border-top: 1px solid var(--border);
    }

    .db-chart__total {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.3rem;
        letter-spacing: 0.04em;
        color: var(--text);
    }

    .db-chart__growth {
        font-size: 0.78rem;
        font-weight: 700;
        color: var(--green);
        background: rgba(16,185,129,0.1);
        padding: 0.22rem 0.6rem;
        border-radius: 6px;
    }

    /* Activity */
    .db-activity { display: flex; flex-direction: column; }

    .db-activity__item {
        display: flex;
        align-items: flex-start;
        gap: 0.8rem;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border);
    }

    .db-activity__item:last-child { border-bottom: none; }

    .db-activity__dot {
        width: 28px; height: 28px;
        border-radius: 8px;
        display: grid;
        place-items: center;
        flex-shrink: 0;
        margin-top: 1px;
    }

    .db-activity__dot--green { background: rgba(16,185,129,0.12); color: var(--green); }
    .db-activity__dot--amber { background: rgba(245,158,11,0.12);  color: var(--amber); }
    .db-activity__dot--red   { background: rgba(248,113,113,0.12); color: var(--red); }
    .db-activity__dot--blue  { background: rgba(59,130,246,0.12);  color: #60a5fa; }

    .db-activity__text { font-size: 0.85rem; color: var(--muted2); line-height: 1.45; flex: 1; }
    .db-activity__text strong { color: var(--text); font-weight: 600; }

    .db-activity__time { font-size: 0.72rem; color: var(--muted); white-space: nowrap; margin-top: 2px; }

    /* Bottom */
    .db-bottom { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }

    .db-actions { display: grid; grid-template-columns: 1fr 1fr; gap: 0.6rem; }

    .db-action {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.7rem 0.9rem;
        border-radius: 10px;
        font-size: 0.83rem;
        font-weight: 600;
        text-decoration: none;
        border: 1px solid var(--border);
        background: rgba(255,255,255,0.025);
        color: var(--muted2);
        transition: color 0.18s, background 0.18s, border-color 0.18s, transform 0.15s;
        cursor: pointer;
        font-family: 'DM Sans', sans-serif;
        width: 100%;
        text-align: left;
    }

    .db-action:hover {
        color: var(--text);
        background: rgba(255,255,255,0.055);
        border-color: rgba(255,255,255,0.12);
        transform: translateY(-1px);
    }

    .db-action--primary {
        background: linear-gradient(135deg, var(--amber-deep), var(--amber));
        color: #0f1623;
        border-color: transparent;
        box-shadow: 0 4px 16px rgba(245,158,11,0.28);
    }

    .db-action--primary:hover { color: #0f1623; filter: brightness(1.06); border-color: transparent; transform: translateY(-1px); }
    .db-action--danger { color: var(--red); border-color: rgba(248,113,113,0.15); }
    .db-action--danger:hover { background: rgba(248,113,113,0.08); border-color: rgba(248,113,113,0.25); color: var(--red); }

    .db-action__icon {
        width: 28px; height: 28px;
        border-radius: 7px;
        background: rgba(255,255,255,0.06);
        display: grid;
        place-items: center;
        flex-shrink: 0;
    }

    .db-action--primary .db-action__icon { background: rgba(0,0,0,0.15); }
    .db-action-form { display: contents; }

    /* Performance */
    .db-perf { display: flex; flex-direction: column; gap: 0.85rem; }
    .db-perf__row { display: flex; flex-direction: column; gap: 0.35rem; }
    .db-perf__label-row { display: flex; justify-content: space-between; align-items: center; }
    .db-perf__label { font-size: 0.8rem; color: var(--muted2); font-weight: 500; }
    .db-perf__pct   { font-size: 0.78rem; font-weight: 700; color: var(--text); }

    .db-perf__track {
        height: 6px;
        background: rgba(255,255,255,0.06);
        border-radius: 999px;
        overflow: hidden;
    }

    .db-perf__fill {
        height: 100%;
        border-radius: 999px;
        transition: width 1.2s cubic-bezier(0.4,0,0.2,1);
        width: 0;
    }

    .db-perf__fill--amber { background: linear-gradient(90deg, var(--amber-deep), var(--amber)); }
    .db-perf__fill--green { background: linear-gradient(90deg, #059669, var(--green)); }
    .db-perf__fill--blue  { background: linear-gradient(90deg, #2563eb, #60a5fa); }
    .db-perf__fill--red   { background: linear-gradient(90deg, #dc2626, var(--red)); }

    @@media (max-width: 1100px) { .db-stats { grid-template-columns: repeat(2, 1fr); } }
    @@media (max-width: 900px)  { .db-mid { grid-template-columns: 1fr; } .db-bottom { grid-template-columns: 1fr; } }
    @@media (max-width: 600px)  { .db-stats { grid-template-columns: 1fr 1fr; } .db-actions { grid-template-columns: 1fr; } }
    @@media (max-width: 400px)  { .db-stats { grid-template-columns: 1fr; } }
</style>

