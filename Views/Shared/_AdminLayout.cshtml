<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — MotorsHut Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=DM+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    <style>
        /* ── Tokens ───────────────────────────────────── */
        :root {
            --amber:        #f59e0b;
            --amber-deep:   #d97706;
            --amber-glow:   rgba(245, 158, 11, 0.12);
            --bg:           #06090f;
            --sidebar-bg:   #080c16;
            --surface:      #0d1220;
            --surface2:     #111827;
            --border:       rgba(255, 255, 255, 0.065);
            --border-hover: rgba(255, 255, 255, 0.12);
            --text:         #e2e8f0;
            --muted:        #64748b;
            --muted2:       #94a3b8;
            --sidebar-w:    240px;
            --topbar-h:     60px;
        }

        /* ── Reset ────────────────────────────────────── */
        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

        html, body {
            height: 100%;
            font-family: 'DM Sans', sans-serif;
            background: var(--bg);
            color: var(--text);
            font-size: 15px;
        }

        /* ── Shell ────────────────────────────────────── */
        .adm-shell {
            display: grid;
            grid-template-columns: var(--sidebar-w) 1fr;
            min-height: 100vh;
            /* REMOVED: grid-template-rows: 100vh — was locking layout to one row */
        }

        /* ══════════════════════════════════════════════
           SIDEBAR
        ══════════════════════════════════════════════ */
        .adm-sidebar {
            grid-column: 1; /* explicit — prevents auto-placement drift */
            grid-row: 1;
            background: var(--sidebar-bg);
            border-right: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            position: sticky;
            top: 0;
            height: 100vh;
            overflow-y: auto;
            scrollbar-width: none;
        }

        .adm-sidebar::-webkit-scrollbar { display: none; }

        /* Subtle noise texture */
        .adm-sidebar::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: var(--sidebar-w);
            height: 100vh;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.025'/%3E%3C/svg%3E");
            background-size: 160px;
            pointer-events: none;
            z-index: 0;
        }

        /* Amber accent line top */
        .adm-sidebar::after {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: var(--sidebar-w);
            height: 3px;
            background: linear-gradient(90deg, var(--amber-deep), var(--amber), transparent);
            z-index: 1;
        }

        /* Brand */
        .adm-brand {
            position: relative;
            z-index: 1;
            padding: 1.4rem 1.3rem 1.2rem;
            display: flex;
            align-items: center;
            gap: 0.7rem;
            border-bottom: 1px solid var(--border);
        }

        .adm-brand__icon {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, var(--amber-deep), var(--amber));
            border-radius: 9px;
            display: grid;
            place-items: center;
            flex-shrink: 0;
            box-shadow: 0 4px 16px rgba(245, 158, 11, 0.32);
        }

        .adm-brand__icon svg {
            width: 20px;
            height: 20px;
            color: #0f1623;
        }

        .adm-brand__texts { line-height: 1; }

        .adm-brand__name {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 1.25rem;
            letter-spacing: 0.09em;
            color: var(--text);
            display: block;
        }

        .adm-brand__tag {
            font-size: 0.68rem;
            font-weight: 600;
            letter-spacing: 0.12em;
            text-transform: uppercase;
            color: var(--amber);
            display: block;
            margin-top: 1px;
        }

        /* Nav sections */
        .adm-nav {
            position: relative;
            z-index: 1;
            flex: 1;
            padding: 1rem 0.75rem;
            display: flex;
            flex-direction: column;
            gap: 0.18rem;
        }

        .adm-nav__label {
            font-size: 0.66rem;
            font-weight: 700;
            letter-spacing: 0.14em;
            text-transform: uppercase;
            color: var(--muted);
            padding: 0.6rem 0.6rem 0.35rem;
            margin-top: 0.4rem;
        }

        .adm-nav__link {
            display: flex;
            align-items: center;
            gap: 0.7rem;
            padding: 0.6rem 0.75rem;
            border-radius: 10px;
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--muted2);
            text-decoration: none;
            transition: color 0.18s, background 0.18s;
            position: relative;
            border: 1px solid transparent;
        }

        .adm-nav__link:hover {
            color: var(--text);
            background: rgba(255, 255, 255, 0.055);
            border-color: var(--border);
        }

        .adm-nav__link.active {
            color: var(--text);
            background: var(--amber-glow);
            border-color: rgba(245, 158, 11, 0.2);
        }

        .adm-nav__link.active .adm-nav__icon {
            color: var(--amber);
        }

        .adm-nav__link.active::before {
            content: '';
            position: absolute;
            left: 0;
            top: 20%;
            bottom: 20%;
            width: 3px;
            background: var(--amber);
            border-radius: 0 3px 3px 0;
        }

        .adm-nav__icon {
            width: 18px;
            height: 18px;
            flex-shrink: 0;
            color: var(--muted);
            transition: color 0.18s;
        }

        .adm-nav__link:hover .adm-nav__icon {
            color: var(--muted2);
        }

        /* Separator */
        .adm-nav__sep {
            height: 1px;
            background: var(--border);
            margin: 0.6rem 0.4rem;
        }

        /* Logout button */
        .adm-nav__form { display: contents; }

        .adm-nav__btn {
            width: 100%;
            background: none;
            border: 1px solid transparent;
            cursor: pointer;
            text-align: left;
            display: flex;
            align-items: center;
            gap: 0.7rem;
            padding: 0.6rem 0.75rem;
            border-radius: 10px;
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--muted2);
            font-family: 'DM Sans', sans-serif;
            transition: color 0.18s, background 0.18s;
        }

        .adm-nav__btn:hover {
            color: #f87171;
            background: rgba(248, 113, 113, 0.08);
            border-color: rgba(248, 113, 113, 0.15);
        }

        .adm-nav__btn:hover .adm-nav__icon { color: #f87171; }

        /* Sidebar footer — user badge */
        .adm-sidebar__foot {
            position: relative;
            z-index: 1;
            padding: 0.9rem 1rem;
            border-top: 1px solid var(--border);
            display: flex;
            align-items: center;
            gap: 0.7rem;
        }

        .adm-user-avatar {
            width: 34px;
            height: 34px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--amber-deep), var(--amber));
            display: grid;
            place-items: center;
            font-weight: 800;
            font-size: 0.78rem;
            color: #0f1623;
            flex-shrink: 0;
        }

        .adm-user-info { min-width: 0; }

        .adm-user-name {
            font-size: 0.82rem;
            font-weight: 600;
            color: var(--text);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            display: block;
        }

        .adm-user-role {
            font-size: 0.7rem;
            color: var(--amber);
            font-weight: 600;
            letter-spacing: 0.06em;
            text-transform: uppercase;
        }

        /* ══════════════════════════════════════════════
           MAIN AREA
        ══════════════════════════════════════════════ */
        .adm-main {
            grid-column: 2; /* explicit — always in the right column */
            grid-row: 1;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            overflow-y: auto;
            background: var(--bg);
        }

        /* Topbar */
        .adm-topbar {
            position: sticky;
            top: 0;
            z-index: 100;
            height: var(--topbar-h);
            background: rgba(6, 9, 15, 0.88);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1.8rem;
            gap: 1rem;
        }

        .adm-topbar__left {
            display: flex;
            align-items: center;
            gap: 0.6rem;
            min-width: 0;
        }

        /* Breadcrumb style page title */
        .adm-page-title {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--text);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .adm-page-title__prefix {
            color: var(--muted);
            font-weight: 400;
        }

        .adm-page-title__sep {
            color: var(--muted);
            font-size: 0.75rem;
        }

        .adm-page-title__icon {
            width: 22px;
            height: 22px;
            background: var(--amber-glow);
            border: 1px solid rgba(245, 158, 11, 0.2);
            border-radius: 6px;
            display: grid;
            place-items: center;
            flex-shrink: 0;
        }

        .adm-page-title__icon svg {
            width: 12px;
            height: 12px;
            color: var(--amber);
        }

        /* Topbar right */
        .adm-topbar__right {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            flex-shrink: 0;
        }

        .adm-topbar__user {
            display: flex;
            align-items: center;
            gap: 0.55rem;
            padding: 0.35rem 0.75rem 0.35rem 0.45rem;
            border: 1px solid var(--border);
            border-radius: 999px;
            font-size: 0.8rem;
            color: var(--muted2);
            background: rgba(255,255,255,0.03);
        }

        .adm-topbar__dot {
            width: 7px;
            height: 7px;
            border-radius: 50%;
            background: #34d399;
            box-shadow: 0 0 0 4px rgba(52, 211, 153, 0.15);
            flex-shrink: 0;
        }

        /* Notification bell */
        .adm-topbar__bell {
            width: 34px;
            height: 34px;
            background: rgba(255,255,255,0.04);
            border: 1px solid var(--border);
            border-radius: 9px;
            display: grid;
            place-items: center;
            color: var(--muted2);
            cursor: pointer;
            transition: color 0.18s, background 0.18s;
            text-decoration: none;
        }

        .adm-topbar__bell:hover {
            color: var(--text);
            background: rgba(255,255,255,0.07);
            border-color: var(--border-hover);
        }

        /* Mobile toggle */
        .adm-topbar__menu {
            display: none;
            width: 34px;
            height: 34px;
            background: rgba(255,255,255,0.04);
            border: 1px solid var(--border);
            border-radius: 9px;
            place-items: center;
            color: var(--muted2);
            cursor: pointer;
            flex-direction: column;
            justify-content: center;
            gap: 5px;
            padding: 8px 9px;
        }

        .adm-topbar__menu span {
            display: block;
            height: 1.5px;
            width: 100%;
            background: currentColor;
            border-radius: 2px;
            transition: all 0.22s;
        }

        /* Content */
        .adm-content {
            flex: 1;
            padding: 2rem 1.8rem 3rem;
        }

        /* ── Overlay — lives OUTSIDE the grid shell ── */
        .adm-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.55);
            z-index: 299;
            backdrop-filter: blur(2px);
        }

        .adm-overlay.open { display: block; }

        /* ── Responsive ───────────────────────────── */
        @@media (max-width: 900px) {
            .adm-shell {
                grid-template-columns: 1fr;
            }

            /* On mobile, main takes the only column */
            .adm-main {
                grid-column: 1;
                grid-row: 1;
            }

            .adm-sidebar {
                position: fixed;
                left: -100%;
                top: 0;
                z-index: 300;
                width: var(--sidebar-w);
                transition: left 0.28s cubic-bezier(0.4, 0, 0.2, 1);
                box-shadow: 8px 0 40px rgba(0,0,0,0.5);
                /* reset grid placement for fixed positioning */
                grid-column: unset;
                grid-row: unset;
            }

            .adm-sidebar.open {
                left: 0;
            }

            .adm-topbar__menu { display: flex; }
        }
    </style>
</head>

<body>
    <div class="adm-shell">

        <!-- ── Sidebar ──────────────────────────────── -->
        <aside class="adm-sidebar" id="admSidebar">

            <!-- Brand -->
            <div class="adm-brand">
                <div class="adm-brand__icon">
                    <svg viewBox="0 0 24 24" fill="none">
                        <path d="M4 14.5V16a1 1 0 0 0 1 1h1a2 2 0 1 0 4 0h4a2 2 0 1 0 4 0h1a1 1 0 0 0 1-1v-1.5l-1.2-4.1A2 2 0 0 0 16.9 9H7.1a2 2 0 0 0-1.9 1.4L4 14.5Z" stroke="currentColor" stroke-width="1.7" stroke-linejoin="round"/>
                        <path d="M7.5 9 9 6.8A1.5 1.5 0 0 1 10.2 6h3.6A1.5 1.5 0 0 1 15 6.8L16.5 9" stroke="currentColor" stroke-width="1.7" stroke-linecap="round"/>
                        <circle cx="8" cy="17" r="1.2" fill="currentColor"/>
                        <circle cx="16" cy="17" r="1.2" fill="currentColor"/>
                    </svg>
                </div>
                <div class="adm-brand__texts">
                    <span class="adm-brand__name">MotorsHut</span>
                    <span class="adm-brand__tag">Admin Panel</span>
                </div>
            </div>

            <!-- Nav -->
            <nav class="adm-nav">

                <div class="adm-nav__label">Main</div>

                <a class="adm-nav__link @(Context.Request.Path.Value?.Contains("/admin/dashboard", StringComparison.OrdinalIgnoreCase) == true ? "active" : string.Empty)"
                   asp-controller="Admin" asp-action="Dashboard">
                    <svg class="adm-nav__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="3" width="7" height="9" rx="1.5"/><rect x="14" y="3" width="7" height="5" rx="1.5"/><rect x="14" y="12" width="7" height="9" rx="1.5"/><rect x="3" y="16" width="7" height="5" rx="1.5"/>
                    </svg>
                    Dashboard
                </a>

                <a class="adm-nav__link @(Context.Request.Path.Value?.Contains("/admin/cars", StringComparison.OrdinalIgnoreCase) == true ? "active" : string.Empty)"
                   asp-controller="Admin" asp-action="Cars">
                    <svg class="adm-nav__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 14.5V16a1 1 0 0 0 1 1h1a2 2 0 1 0 4 0h4a2 2 0 1 0 4 0h1a1 1 0 0 0 1-1v-1.5l-1.2-4.1A2 2 0 0 0 16.9 9H7.1a2 2 0 0 0-1.9 1.4L4 14.5Z"/>
                        <path d="M7.5 9 9 6.8A1.5 1.5 0 0 1 10.2 6h3.6A1.5 1.5 0 0 1 15 6.8L16.5 9"/>
                    </svg>
                    Cars
                </a>

                <div class="adm-nav__label">Settings</div>

                <a class="adm-nav__link @(Context.Request.Path.Value?.Contains("/admin/register-admin", StringComparison.OrdinalIgnoreCase) == true ? "active" : string.Empty)"
                   asp-controller="Admin" asp-action="RegisterAdmin">
                    <svg class="adm-nav__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="9" cy="7" r="4"/><path d="M3 21v-2a4 4 0 0 1 4-4h4a4 4 0 0 1 4 4v2"/><line x1="19" y1="8" x2="19" y2="14"/><line x1="22" y1="11" x2="16" y2="11"/>
                    </svg>
                    Register Admin
                </a>

                <a class="adm-nav__link @(Context.Request.Path.Value?.Contains("/change-password", StringComparison.OrdinalIgnoreCase) == true ? "active" : string.Empty)"
                   asp-controller="Account" asp-action="ChangePassword">
                    <svg class="adm-nav__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="11" width="18" height="11" rx="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                    </svg>
                    Change Password
                </a>

                <div class="adm-nav__sep"></div>

                <a class="adm-nav__link" asp-controller="Home" asp-action="Index">
                    <svg class="adm-nav__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 12L12 3l9 9"/><path d="M9 21V12h6v9"/>
                    </svg>
                    Back to Site
                </a>

                <form asp-controller="Account" asp-action="Logout" method="post" class="adm-nav__form">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="adm-nav__btn">
                        <svg class="adm-nav__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/>
                        </svg>
                        Logout
                    </button>
                </form>
            </nav>

            <!-- Sidebar foot: user -->
            <div class="adm-sidebar__foot">
                <div class="adm-user-avatar" id="admAvatarInitial">AD</div>
                <div class="adm-user-info">
                    <span class="adm-user-name" id="admUserName">@User.Identity?.Name</span>
                    <span class="adm-user-role">Administrator</span>
                </div>
            </div>
        </aside>

        <!-- ── Main ─────────────────────────────────── -->
        <div class="adm-main">

            <!-- Topbar -->
            <header class="adm-topbar">
                <div class="adm-topbar__left">
                    <!-- Mobile menu toggle -->
                    <button class="adm-topbar__menu" id="admMenuBtn" aria-label="Open sidebar">
                        <span></span><span></span><span></span>
                    </button>

                    <div class="adm-page-title">
                        <div class="adm-page-title__icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="9"/><path d="M12 8v4l3 3"/>
                            </svg>
                        </div>
                        <span class="adm-page-title__prefix">Admin</span>
                        <svg class="adm-page-title__sep" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
                        <span>@ViewData["Title"]</span>
                    </div>
                </div>

                <div class="adm-topbar__right">
                    <!-- Notification bell -->
                    <a href="#" class="adm-topbar__bell" aria-label="Notifications">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/><path d="M13.73 21a2 2 0 0 1-3.46 0"/>
                        </svg>
                    </a>

                    <!-- User pill -->
                    <div class="adm-topbar__user">
                        <span class="adm-topbar__dot"></span>
                        <span id="admTopbarName">@User.Identity?.Name</span>
                    </div>
                </div>
            </header>

            <!-- Page content -->
            <main class="adm-content">
                @RenderBody()
            </main>
        </div>

    </div><!-- /.adm-shell -->

    <!--
        OVERLAY is intentionally OUTSIDE .adm-shell
        It uses position:fixed so it doesn't need to be a grid child.
        Keeping it inside was silently consuming a grid slot
        and pushing .adm-main to a new row (the bug).
    -->
    <div class="adm-overlay" id="admOverlay"></div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["SuccessMessage"] is string successMessage)
    {
        <script>
            Swal.fire({
                toast: true, position: "top-end", icon: "success",
                title: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(successMessage)),
                showConfirmButton: false, timer: 2200, timerProgressBar: true,
                background: '#0d1220', color: '#e2e8f0',
                iconColor: '#f59e0b'
            });
        </script>
    }
    @if (TempData["ErrorMessage"] is string errorMessage)
    {
        <script>
            Swal.fire({
                toast: true, position: "top-end", icon: "error",
                title: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(errorMessage)),
                showConfirmButton: false, timer: 2600, timerProgressBar: true,
                background: '#0d1220', color: '#e2e8f0',
                iconColor: '#f87171'
            });
        </script>
    }

    <script>
        // Mobile sidebar toggle
        const sidebar  = document.getElementById('admSidebar');
        const overlay  = document.getElementById('admOverlay');
        const menuBtn  = document.getElementById('admMenuBtn');

        function openSidebar() {
            sidebar.classList.add('open');
            overlay.classList.add('open');
        }

        function closeSidebar() {
            sidebar.classList.remove('open');
            overlay.classList.remove('open');
        }

        menuBtn?.addEventListener('click', () =>
            sidebar.classList.contains('open') ? closeSidebar() : openSidebar()
        );
        overlay?.addEventListener('click', closeSidebar);

        // Avatar initials from username
        const name = document.getElementById('admUserName')?.textContent?.trim() || '';
        const initials = name.split(/[\s@@.]/).filter(Boolean).slice(0, 2).map(w => w[0].toUpperCase()).join('') || 'AD';
        const avatarEl = document.getElementById('admAvatarInitial');
        if (avatarEl) avatarEl.textContent = initials;
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
