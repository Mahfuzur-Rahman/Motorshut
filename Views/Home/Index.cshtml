<style>
    @@import url('https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700;800&family=Manrope:wght@400;500;600;700&display=swap');

    .mh-page {
        --mh-bg: #eef3f8;
        --mh-paper: #ffffff;
        --mh-ink: #0f172a;
        --mh-muted: #475569;
        --mh-line: #dbe3ef;
        --mh-primary: #0f7ccf;
        --mh-primary-deep: #0c4f8f;
        --mh-teal: #059669;
        color: var(--mh-ink);
        scroll-behavior: smooth;
        font-family: "Manrope", sans-serif;
        background:
            radial-gradient(circle at 12% 0%, rgba(15, 124, 207, 0.16), transparent 36%),
            radial-gradient(circle at 90% 10%, rgba(5, 150, 105, 0.11), transparent 34%),
            var(--mh-bg);
        border-radius: 24px;
        padding: 0.35rem 0.35rem 0;
    }

    .mh-hero {
        position: relative;
        overflow: hidden;
        border-radius: 28px;
        min-height: 630px;
        margin-top: 0.35rem;
        background: #081120;
        border: 1px solid rgba(255, 255, 255, 0.18);
        box-shadow: 0 30px 65px rgba(2, 6, 23, 0.32);
    }

    .mh-hero-bg {
        position: absolute;
        inset: 0;
        background:
            linear-gradient(112deg, rgba(7, 12, 27, 0.95), rgba(7, 12, 27, 0.38)),
            radial-gradient(circle at 24% 20%, rgba(56, 189, 248, 0.36), transparent 42%),
            radial-gradient(circle at 82% 84%, rgba(5, 150, 105, 0.28), transparent 44%),
            url("https://images.unsplash.com/photo-1553440569-bcc63803a83d?auto=format&fit=crop&w=1800&q=80") center/cover no-repeat;
        animation: mhZoom 18s ease-in-out infinite alternate;
    }

    .mh-hero-content {
        position: relative;
        z-index: 2;
        max-width: 780px;
        padding: 4.3rem 3.2rem;
        color: #fff;
    }

    .mh-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.45rem;
        border: 1px solid rgba(255, 255, 255, 0.35);
        background: rgba(255, 255, 255, 0.12);
        padding: 0.38rem 0.95rem;
        border-radius: 999px;
        font-size: 0.79rem;
        font-weight: 700;
        margin-bottom: 1.15rem;
        letter-spacing: 0.2px;
    }

    .mh-badge::before {
        content: "";
        width: 7px;
        height: 7px;
        border-radius: 50%;
        background: #34d399;
        box-shadow: 0 0 0 6px rgba(52, 211, 153, 0.2);
    }

    .mh-hero h1 {
        font-family: "Sora", sans-serif;
        font-size: clamp(2.15rem, 4.6vw, 3.95rem);
        line-height: 1.03;
        margin-bottom: 1.05rem;
        font-weight: 800;
        letter-spacing: -0.8px;
    }

    .mh-hero p {
        color: rgba(255, 255, 255, 0.9);
        max-width: 640px;
        font-size: 1.03rem;
        margin-bottom: 1.5rem;
        line-height: 1.65;
    }

    .mh-hero-actions {
        display: flex;
        gap: 0.8rem;
        flex-wrap: wrap;
        margin-bottom: 2rem;
    }

    .mh-btn-primary {
        background: linear-gradient(135deg, #0ea5e9, #2563eb 72%);
        color: #fff;
        border: 0;
        border-radius: 12px;
        font-weight: 700;
        padding: 0.7rem 1.2rem;
        box-shadow: 0 12px 20px rgba(37, 99, 235, 0.28);
    }

    .mh-btn-outline {
        border: 1px solid rgba(255, 255, 255, 0.55);
        color: #fff;
        border-radius: 12px;
        backdrop-filter: blur(2px);
        font-weight: 600;
        padding: 0.7rem 1.2rem;
    }

    .mh-btn-outline:hover {
        color: #fff;
        background: rgba(255, 255, 255, 0.12);
    }

    .mh-kpis {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .mh-kpi {
        min-width: 165px;
        background: linear-gradient(160deg, rgba(255, 255, 255, 0.14), rgba(255, 255, 255, 0.03));
        border: 1px solid rgba(255, 255, 255, 0.22);
        border-radius: 14px;
        padding: 0.75rem 0.92rem;
        backdrop-filter: blur(2px);
    }

    .mh-kpi strong {
        font-family: "Sora", sans-serif;
        font-size: 1.45rem;
        display: block;
    }

    .mh-kpi span {
        font-size: 0.82rem;
        color: rgba(255, 255, 255, 0.84);
    }

    .mh-hero-floating {
        position: absolute;
        right: 1.3rem;
        top: 1.35rem;
        display: grid;
        gap: 0.7rem;
        z-index: 3;
    }

    .float-card {
        color: #fff;
        font-weight: 600;
        font-size: 0.83rem;
        background: rgba(15, 23, 42, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 0.56rem 0.82rem;
        border-radius: 999px;
        backdrop-filter: blur(3px);
        animation: floatUp 4s ease-in-out infinite;
    }

    .float-card:nth-child(2) { animation-delay: 0.8s; }
    .float-card:nth-child(3) { animation-delay: 1.6s; }

    .mh-section { padding: 4.4rem 0 1.2rem; }

    .mh-section-head { margin-bottom: 1.6rem; }

    .mh-section-head span {
        color: var(--mh-primary-deep);
        font-weight: 700;
        font-size: 0.8rem;
        letter-spacing: 0.7px;
        text-transform: uppercase;
        font-family: "Sora", sans-serif;
    }

    .mh-section-head h2 {
        margin: 0.4rem 0 0;
        font-size: clamp(1.7rem, 3vw, 2.55rem);
        font-weight: 800;
        font-family: "Sora", sans-serif;
        letter-spacing: -0.4px;
    }

    .mh-car-grid {
        display: grid;
        gap: 1.1rem;
        grid-template-columns: repeat(4, minmax(0, 1fr));
    }

    .mh-car-card {
        border: 1px solid var(--mh-line);
        border-radius: 18px;
        overflow: hidden;
        background: var(--mh-paper);
        box-shadow: 0 14px 28px rgba(15, 23, 42, 0.08);
        transition: transform 0.26s ease, box-shadow 0.26s ease, border-color 0.26s ease;
    }

    .mh-car-card:hover {
        transform: translateY(-8px);
        border-color: #bfdbfe;
        box-shadow: 0 25px 42px rgba(15, 23, 42, 0.14);
    }

    .mh-car-card img {
        width: 100%;
        height: 214px;
        object-fit: cover;
    }

    .mh-car-body { padding: 1rem; }

    .mh-car-body h3 {
        margin: 0 0 0.42rem;
        font-size: 1.05rem;
        font-family: "Sora", sans-serif;
    }

    .mh-car-body p {
        margin: 0 0 0.75rem;
        color: var(--mh-muted);
        font-size: 0.9rem;
        min-height: 42px;
        line-height: 1.5;
    }

    .mh-car-meta { display: flex; gap: 0.4rem; flex-wrap: wrap; margin-bottom: 0.68rem; }

    .mh-car-meta span {
        font-size: 0.74rem;
        border-radius: 999px;
        background: #eff6ff;
        color: #1e40af;
        padding: 0.24rem 0.58rem;
        font-weight: 700;
    }

    .mh-car-price {
        font-size: 1.2rem;
        font-weight: 800;
        font-family: "Sora", sans-serif;
    }

    .mh-about {
        display: grid;
        grid-template-columns: 1.1fr 0.9fr;
        gap: 1.5rem;
        align-items: center;
    }

    .mh-about-text span {
        color: var(--mh-primary-deep);
        font-weight: 700;
        font-size: 0.82rem;
        text-transform: uppercase;
        font-family: "Sora", sans-serif;
    }

    .mh-about-text h2 {
        margin: 0.48rem 0 0.8rem;
        font-size: clamp(1.5rem, 3vw, 2.25rem);
        font-weight: 800;
        font-family: "Sora", sans-serif;
    }

    .mh-about-text p {
        color: var(--mh-muted);
        margin-bottom: 0.95rem;
        line-height: 1.68;
    }

    .mh-about-text ul { margin: 0; padding-left: 1.1rem; color: #1e293b; }
    .mh-about-text li { margin-bottom: 0.45rem; }

    .mh-about-visual {
        position: relative;
        border-radius: 22px;
        overflow: hidden;
        min-height: 390px;
        border: 1px solid #cdd9e8;
        box-shadow: 0 20px 38px rgba(15, 23, 42, 0.12);
    }

    .mh-about-visual img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .about-orb {
        position: absolute;
        width: 230px;
        height: 230px;
        border-radius: 50%;
        right: -70px;
        top: -70px;
        background: radial-gradient(circle, rgba(56, 189, 248, 0.65), rgba(59, 130, 246, 0.05));
        z-index: 1;
    }

    .mh-feedback-row {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 1rem;
    }

    .mh-feedback-card {
        border-radius: 18px;
        background: linear-gradient(160deg, #ffffff, #f7fafc);
        border: 1px solid var(--mh-line);
        padding: 1.15rem;
        box-shadow: 0 10px 22px rgba(15, 23, 42, 0.07);
    }

    .mh-feedback-card p {
        color: #334155;
        min-height: 90px;
        font-style: italic;
        line-height: 1.6;
    }

    .mh-feedback-card h4 {
        margin: 0 0 0.2rem;
        font-size: 1rem;
        font-family: "Sora", sans-serif;
    }

    .mh-feedback-card span { color: #64748b; font-size: 0.83rem; }

    .mh-footer-showcase {
        margin-top: 4rem;
        border-radius: 24px 24px 0 0;
        background:
            radial-gradient(circle at top right, rgba(14, 165, 233, 0.2), transparent 35%),
            linear-gradient(145deg, #0a1326, #0f172a 58%, #1f2937);
        color: #e2e8f0;
        padding: 2.3rem 1.45rem;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1.4fr 1fr 1fr 1.2fr;
        gap: 1rem;
    }

    .footer-grid h3,
    .footer-grid h5 {
        color: #fff;
        margin-top: 0;
        font-family: "Sora", sans-serif;
    }

    .footer-grid p { color: #cbd5e1; margin-bottom: 0.55rem; }

    .footer-grid a {
        display: block;
        color: #cbd5e1;
        text-decoration: none;
        margin-bottom: 0.36rem;
    }

    .footer-grid a:hover { color: #fff; }

    .footer-note {
        display: inline-block;
        margin-top: 0.35rem;
        border: 1px solid rgba(255, 255, 255, 0.22);
        border-radius: 999px;
        padding: 0.38rem 0.78rem;
        font-size: 0.84rem;
    }

    .reveal {
        opacity: 0;
        transform: translateY(24px);
        transition: opacity .7s ease, transform .7s ease;
    }

    .reveal.in { opacity: 1; transform: translateY(0); }

    @@keyframes mhZoom { from { transform: scale(1); } to { transform: scale(1.08);} }
    @@keyframes floatUp { 0%,100% { transform: translateY(0);} 50% { transform: translateY(-6px);} }

    @@media (max-width: 1199px) {
        .mh-car-grid { grid-template-columns: repeat(2, minmax(0, 1fr)); }
        .footer-grid { grid-template-columns: repeat(2, minmax(0, 1fr)); }
    }

    @@media (max-width: 991px) {
        .mh-page { padding: 0.2rem 0.2rem 0; }
        .mh-hero { min-height: 570px; }
        .mh-hero-content { padding: 3rem 1.2rem; }
        .mh-hero-floating { display: none; }
        .mh-about { grid-template-columns: 1fr; }
        .mh-feedback-row { grid-template-columns: 1fr; }
    }

    @@media (max-width: 700px) {
        .mh-car-grid { grid-template-columns: 1fr; }
        .footer-grid { grid-template-columns: 1fr; }
    }
</style>

@section Scripts {
    <script>
        (function () {
            const counters = document.querySelectorAll('.mh-counter');
            counters.forEach((el) => {
                const target = Number(el.getAttribute('data-target') || '0');
                let value = 0;
                const step = Math.max(1, Math.ceil(target / 60));
                const timer = setInterval(() => {
                    value += step;
                    if (value >= target) {
                        value = target;
                        clearInterval(timer);
                    }
                    el.textContent = value.toLocaleString();
                }, 22);
            });

            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('in');
                    }
                });
            }, { threshold: 0.14 });

            document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));
        })();
    </script>
}
