@model MotorsHut.Models.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="login-shell">
    <div class="login-scene">
        <div class="scene-overlay"></div>
        <div class="scene-copy">
            <span class="scene-chip">Premium Auto Marketplace</span>
            <h1>Shift Into Your Next Deal</h1>
            <p>Buy and sell with confidence. Instant listing tools, verified history, and faster closing.</p>
        </div>
    </div>
    <div class="login-panel">
        <div class="login-card">
            <h2>Welcome back</h2>
            <p class="sub">Sign in to continue to MotorsHut.</p>

            <form asp-action="Login" asp-controller="Account" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="name@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-login w-100">Login</button>
            </form>

            <p class="mt-3 mb-0 text-center">
                <a asp-action="ForgotPassword" asp-controller="Account">Forgot password?</a>
            </p>
        </div>
    </div>
</section>

<style>
    .login-shell {
        min-height: calc(100vh - 170px);
        border-radius: 22px;
        overflow: hidden;
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        background: #0f172a;
        box-shadow: 0 24px 50px rgba(2, 6, 23, 0.22);
    }

    .login-scene {
        position: relative;
        background:
            linear-gradient(125deg, rgba(6, 9, 24, 0.78), rgba(14, 165, 233, 0.28)),
            url("https://images.unsplash.com/photo-1502877338535-766e1452684a?auto=format&fit=crop&w=1600&q=80") center/cover no-repeat;
    }

    .scene-overlay {
        position: absolute;
        inset: 0;
        background:
            radial-gradient(circle at 20% 22%, rgba(56, 189, 248, 0.42), transparent 52%),
            radial-gradient(circle at 76% 80%, rgba(251, 191, 36, 0.26), transparent 54%);
    }

    .scene-copy {
        position: absolute;
        left: 2.2rem;
        bottom: 2.2rem;
        z-index: 1;
        color: #fff;
        max-width: 520px;
    }

    .scene-chip {
        display: inline-block;
        padding: 0.35rem 0.85rem;
        border-radius: 999px;
        background: rgba(255, 255, 255, 0.18);
        border: 1px solid rgba(255, 255, 255, 0.35);
        font-size: 0.8rem;
        margin-bottom: 0.8rem;
    }

    .scene-copy h1 {
        margin: 0 0 0.8rem;
        font-size: clamp(2rem, 3.2vw, 3rem);
        font-weight: 800;
        line-height: 1.1;
    }

    .scene-copy p {
        margin: 0;
        color: rgba(255, 255, 255, 0.88);
        font-size: 1rem;
    }

    .login-panel {
        background: linear-gradient(180deg, #f8fafc, #eef2ff);
        display: grid;
        place-items: center;
        padding: 1.5rem;
    }

    .login-card {
        width: 100%;
        max-width: 420px;
        border-radius: 20px;
        padding: 2rem 1.7rem;
        background: rgba(255, 255, 255, 0.72);
        border: 1px solid rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(10px);
        box-shadow: 0 14px 36px rgba(15, 23, 42, 0.16);
    }

    .login-card h2 {
        margin: 0;
        font-weight: 700;
        color: #0f172a;
    }

    .login-card .sub {
        margin: 0.4rem 0 1.35rem;
        color: #64748b;
        font-size: 0.94rem;
    }

    .btn-login {
        border-radius: 12px;
        padding: 0.7rem 1rem;
        font-weight: 700;
        color: #fff;
        border: 0;
        background: linear-gradient(135deg, #0284c7, #2563eb);
    }

    .btn-login:hover {
        color: #fff;
        filter: brightness(1.04);
    }

    @@media (max-width: 991px) {
        .login-shell {
            grid-template-columns: 1fr;
        }

        .login-scene {
            min-height: 260px;
        }

        .scene-copy {
            left: 1.2rem;
            right: 1.2rem;
            bottom: 1.2rem;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
